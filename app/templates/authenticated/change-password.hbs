{{page-title "Change Password"}}

<div class="p-8 flex justify-center">
  <div class="flex flex-col w-full max-w-xl">
    <Ui::Input @value={{this.oldPassword}} @onInputValue={{fn (mut this.oldPassword)}} @type="password" @label="old password" />
    <Ui::Input @value={{this.newPassword}} @onInputValue={{fn (mut this.newPassword)}} @type="password" @label="new password" class="mt-4" />
    <Ui::Input @value={{this.newPasswordConfirmation}} @onInputValue={{fn (mut this.newPasswordConfirmation)}} @type="password" @label="new password confirmation" class="mt-4" />

    <EuiButton
      @fill={{true}}
      @isLoading={{this.onSubmit.isRunning}}
      class="mt-8"
      {{on "click" (perform this.onSubmit)}}
    >
      Change Password
    </EuiButton>
  </div>
</div>
