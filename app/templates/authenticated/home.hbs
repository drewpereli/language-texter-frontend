{{page-title "Home"}}

<div class="p-8 flex justify-center">
  <div class="w-full max-w-3xl">

    <EuiButton
      @fill={{true}}
      @iconType="plus"
      {{on "click" this.createNewChallenge}}
    >
      Add New Challenge
    </EuiButton>

    {{#each this.newChallenges as |challenge|}}      
      <Challenge @challenge={{challenge}} class="mt-8" />
    {{/each}}

    {{#each this.challengeLists as |list|}}  
      <EuiAccordion 
        @initialIsOpen={{list.startOpen}}
        @buttonClassName="px-4 rounded bg-gray-700 hover:bg-gray-600"
        @buttonContentClassName="p-4"
        class="mt-8"
      >
        <:buttonContent>
          <h3 class="text-xl uppercase font-medium">{{list.status}}</h3>
        </:buttonContent>
        <:content>
          <ChallengeList class="w-full max-w-3xl mt-4" @status={{list.status}} />
        </:content>
      </EuiAccordion>
    {{/each}}
  </div>
</div>
