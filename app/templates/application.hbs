{{page-title "SpanishTexter"}}

<div class="h-screen w-screen">
  <nav class="flex items-center justify-end py-4 px-8">
    {{#if this.session.isAuthenticated}}
      <LinkTo @route="authenticated.home">
        Home
      </LinkTo>

      <LinkTo @route="authenticated.change-password" class="ml-8">
        Change Password
      </LinkTo>
    {{/if}}

    <LinkTo @route={{if this.session.isAuthenticated "authenticated.logout" "login"}} class="ml-8 first:ml-0">
      {{#if this.session.isAuthenticated}}
        Log Out
      {{else}}
        Log In
      {{/if}}
    </LinkTo>
  </nav>

  {{outlet}}

  <div class="absolute bottom-8 right-8">
    {{#each this.flashMessages.queue as |flash|}}
      <FlashMessage @flash={{flash}} />
    {{/each}}
  </div>
</div>
