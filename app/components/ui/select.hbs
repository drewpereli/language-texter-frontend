
<div class="flex flex-col" ...attributes>
  {{#if this.includeLabelAndErrorSection}}
    <div class="flex items-center justify-between">
      {{#if @label}}
        <label class="text-xs" for={{this.inputId}}>{{@label}}</label>
      {{/if}}
      
      {{#if @error}}
        <span class="text-xs text-red-500 ml-4 first:ml-0">{{@error}}</span>
      {{/if}}
    </div>
    
  {{/if}}

  <PowerSelect
    @options={{this.computedOptions}}
    @selected={{this.selectedComputedOption}}
    @placeholder={{@placeholder}}
    @onChange={{this.onChange}}
    @triggerClass="mt-1 h-8 focus:outline-none bg-gray-100 text-gray-900 border rounded p-1 text-sm flex items-center {{if @error "border-red-500" "border-gray-600 focus:border-blue-700"}}"
    @dropdownClass="text-gray-900"
    as |option|
  >
    {{option.label}}
  </PowerSelect>
</div>
