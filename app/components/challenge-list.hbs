<div ...attributes>

  <div>
    <Ui::Button @onClick={{this.addNewChallenge}} @variant="primary" @label="Add New" @icon="plus-square">
      <FaIcon @icon="plus-square"  />
      <span class="ml-1">Add New</span>
    </Ui::Button>
  </div>

  <div class="mt-8">
    <div class="flex items-center px-4 bg-gray-500 font-bold py-3 text-xs">
      <div class="w-1/3 flex-shrink-0">Spanish</div>
      <div class="w-1/3 flex-shrink-0">English</div>
      <div class="w-1/3 flex-shrink-0">Current streak/streak required</div>
    </div>
    {{#each this.challenges as |challenge|}}
      <Challenge @challenge={{challenge}} />
    {{/each}}
  </div>
</div>
